{% extends 'base.html.twig' %}

{% block title %}Create Reservation{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/reservation.css') }}">
{% endblock %}
{% block body %}
    <div class="container">
        <h1>Create a New Reservation</h1>

        <form method="post" action="{{ path('app_reservation_new') }}">
            <div class="form-group">
                <label for="date_debut">Start Date</label>
                <input type="date" id="date_debut" name="date_debut" required class="form-control">
            </div>

            <div class="form-group">
                <label for="date_fin">End Date</label>
                <input type="date" id="date_fin" name="date_fin" required class="form-control">
            </div>

            <div class="form-group">
                <label for="immobilier_id">Immobilier</label>
                <select name="immobilier_id" id="immobilier_id" class="form-control">
                    {% for immobilier in immobiliers %}
                        <option value="{{ immobilier.id }}">{{ immobilier.description }}</option>
                    {% endfor %}
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Create</button>
        </form>

    </div>
{% endblock %}
