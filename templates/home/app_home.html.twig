{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
    <style>
        /* Container du header */
        .navbar {
            background-color: #4CAF50; /* Couleur de fond verte */
            padding: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .navbar .container {
            display: flex;
            justify-content: space-between;
            width: 100%;
        }

        /* Logo */
        .navbar .logo h1 a {
            text-decoration: none;
            color: #fff;
            font-size: 30px;
            font-weight: bold;
        }

        /* Liens du menu de navigation */
        .navbar-links ul {
            display: flex;
            list-style: none;
            margin: 0;
            padding: 0;
        }

        .navbar-links li {
            margin-right: 20px;
        }

        .navbar-links a {
            color: #fff;
            font-size: 16px;
            text-decoration: none;
            display: flex;
            align-items: center;
        }

        .navbar-links a:hover {
            color: #f8c034;
        }

        .navbar-links a i {
            margin-right: 8px;
        }
        footer {
            background-color: #333; /* Couleur de fond sombre */
            color: white;
            text-align: center;
            padding: 20px;
            margin-top: 30px;
        }

        /* Texte du footer */
        .footer-content p {
            font-size: 14px;
        }
        /* Header responsive pour petits écrans */
        @media (max-width: 768px) {
            .navbar .container {
                flex-direction: column;
                align-items: center;
            }

            .navbar-links ul {
                flex-direction: column;
                padding-left: 0;
            }

            .navbar-links li {
                margin-right: 0;
                margin-bottom: 10px;
            }
        }

        /* Footer responsive */
        @media (max-width: 768px) {
            footer {
                font-size: 12px;
                padding: 15px;
            }
        }

    </style>
    <header class="navbar">
