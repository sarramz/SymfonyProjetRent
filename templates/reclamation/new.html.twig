{% extends 'base.html.twig' %}

{% block title %}Nouvelle Réclamation{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="text-center">Nouvelle Réclamation</h1>

        <form method="post" action="{{ path('app_reclamation_new') }}">
            <div class="form-group">
                <label for="contenu">Contenu de la réclamation</label>
                <textarea id="contenu" name="contenu" class="form-control" rows="5" required></textarea>
            </div>
            <div class="mt-3 text-center">
                <button type="submit" class="btn btn-primary">Envoyer</button>
                <a href="{{ path('app_home') }}" class="btn btn-secondary">Annuler</a>
            </div>
        </form>
    </div>
{% endblock %}
